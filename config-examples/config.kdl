// Zellij Configuration
// Place this file at ~/.config/zellij/config.kdl

simplified_ui true
default_shell "bash"
pane_frames false
theme "catppuccin-mocha"

// Copy command
copy_command "xclip -selection clipboard" // Linux
// copy_command "pbcopy"                   // macOS
// copy_command "clip.exe"                 // Windows/WSL

// Copy on select
copy_on_select true
scroll_buffer_size 10000

keybinds {
    normal {
        // Session management shortcuts
        bind "Alt s" { LaunchOrFocusPlugin "zellij:session-manager" {}; }
        bind "Alt w" { LaunchOrFocusPlugin "zellij:strider" {}; }
        
        // Quick pane navigation
        bind "Alt h" { MoveFocus "Left"; }
        bind "Alt j" { MoveFocus "Down"; }
        bind "Alt k" { MoveFocus "Up"; }
        bind "Alt l" { MoveFocus "Right"; }
        
        // Pane creation
        bind "Alt Enter" { NewPane "Down"; }
        bind "Alt \\" { NewPane "Right"; }
        
        // Tab management
        bind "Alt t" { NewTab; }
        bind "Alt 1" { GoToTab 1; }
        bind "Alt 2" { GoToTab 2; }
        bind "Alt 3" { GoToTab 3; }
        bind "Alt 4" { GoToTab 4; }
        bind "Alt 5" { GoToTab 5; }
        
        // Quick quit
        bind "Alt q" { Quit; }
    }
    
    shared_except "locked" {
        bind "Ctrl g" { SwitchToMode "Locked"; }
    }
    
    locked {
        bind "Ctrl g" { SwitchToMode "Normal"; }
    }
}

plugins {
    tab-bar { path "tab-bar"; }
    status-bar { path "status-bar"; }
    strider { path "strider"; }
    compact-bar { path "compact-bar"; }
    session-manager { path "session-manager"; }
}